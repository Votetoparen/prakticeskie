# Шаг 2: Работа со списками

# Создание списка
books = ["1984", "Убить пересмешника", "Гордость и предубеждение"]
print("Список книг:", books)

# Добавление элемента
books.append("Моби Дик")
print("После добавления:", books)

# Удаление элемента
books.remove("1984")
print("После удаления:", books)

# Изменение элемента
books[0] = "Гордость и предубеждение (новое издание)"
print("После изменения:", books)

# Вывод списка
print("\nТекущий список книг:")
for book in books:
    print("-", book)


# Шаг 3: Работа со словарями

# Создание словаря
friend = {"имя": "Алексей", "возраст": 22, "город": "Москва"}
print("\nИнформация о друге:", friend)

# Добавление элемента
friend["хобби"] = "фотография"
print("После добавления хобби:", friend)

# Удаление элемента
del friend["возраст"]
print("После удаления возраста:", friend)

# Изменение элемента
friend["город"] = "Санкт-Петербург"
print("После изменения города:", friend)

# Вывод словаря
print("\nИнформация о друге:")
for key, value in friend.items():
    print(f"{key}: {value}")


# Шаг 4: Комбинирование списков и словарей

# Создание списка студентов
students = [
    {"имя": "Иван", "возраст": 20, "группа": "А-101"},
    {"имя": "Мария", "возраст": 21, "группа": "А-102"},
    {"имя": "Петр", "возраст": 22, "группа": "А-101"}
]

# Вывод информации о каждом студенте
print("\nИнформация о студентах:")
for student in students:
    print(f"Имя: {student['имя']}, Возраст: {student['возраст']}, Группа: {student['группа']}")
