try:
    # Запрос числа у пользователя
    number = float(input("Введите число: "))

    # Проверка условий
    if number > 0:
        print("Число положительное.")
    elif number < 0:
        print("Число отрицательное.")
    else:
        print("Число равно нулю.")

except ValueError:
    print("Ошибка: введите корректное число.")
